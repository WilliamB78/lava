{% extends 'layout.html.twig' %}

{% block title %}Nouvelle r√©servation{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-10 offset-1">
            <h1 class="text-center">Nouvelle Reservation pour le {{ date | date('d m Y') }}</h1>
            <div class="col-12">
                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form,{'attr': {'class': 'row reservation_new'}}) }}
                    <div class="col-4 offset-4">
                        {{ form_row(form.date)}}
                    </div>
                    <div class="col-4 offset-4">
                        {{ form_row(form.room)}}
                    </div>
                    <div class="col-4 offset-4">
                        {{ form_row(form.start)}}
                    </div>
                    <div class="col-4 offset-4">
                        {{ form_row(form.end)}}
                    </div>
                    <div class="col-4 offset-4">
                        {{ form_row(form.submit) }}
                        <a href="{{ path('room_calendar_show', {"id": app.request.get('id')}) }}">back to list</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}