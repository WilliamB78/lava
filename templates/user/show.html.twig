{% extends 'layout.html.twig' %}

{% block title %}{{ user.firstName }}{% endblock %}

{% block body %}
    <div class="flex">
        <div class="col-6 offset-3">
            <div class="card bg-light mb-3 text-center" style="max-width: 30rem;margin: 50px;">
                <div class="card-header">{{ user.firstName }} {{ user.lastName }}</div>
                <div class="card-body">
                    <p class="card-text">
                        Email: <b>{{ user.email }}</b><br>
                        Roles: <b>{{ user.roles ? user.roles|join(', ') : '' }}</b><br>
                    </p>
                    <p>
                        <a href="{{ path('user_index') }}" class="btn btn-primary">Retour</a>
                        <a href="{{ path('user_account_status', {'id': user.id}) }}" class="btn {{ user.isBlocked ? 'btn-info' : 'btn-danger' }}">{{ user | is_enabled }}</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}